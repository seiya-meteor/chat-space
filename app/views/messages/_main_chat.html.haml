.Chat
  .Header
    .Header__group
      .Header__group-name
        = @group.name
      %ul.Header__member-list
        Member:
        %li.Header__name
          - @group.users.each do |user|
            %li= user.name
    = link_to 'Edit', edit_group_path(@group), class: 'Header__edit-btn' 
  .Message-list
    = render @messages
    
  .Footer
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'Form__input', placeholder: 'type a message'
        = f.label :image, class: 'Form__image' do
          = icon('far', 'image',)
          = f.file_field :image, class: 'far-image'
      = f.submit 'Send', class: 'Form__submit'
