.Side-ber
  .Side-ber__user-name
    .Side-items
      %h3.Side-items__name
        = current_user.name
      %ul.Side-items__icon
        = link_to new_group_path do
          = icon('fas', 'edit', class: 'icon1')
        = link_to edit_user_path(current_user), class: 'Side__cog' do
          = icon('fas', 'cog', class: 'icon2')
  .GroupList
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message