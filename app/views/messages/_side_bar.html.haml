.Side-ber
  .Side-ber__user-name
    .Side-items
      %h3.Side-items__name
        = current_user.name
      %ul.Side-items__icon
        = link_to "/groups/new", class: "Side__edit" do
          = icon('fas', 'edit', class:'icon1')
          %span<>
        = link_to edit_user_path(current_user), class: "Side__cog" do
          = icon('fas', 'cog', class:'icon2')
          %span<>
  .Group-list
    - current_user.groups.each do |group|
      .Group
        = link_to '#' do
          .Group__name
            = group.name
